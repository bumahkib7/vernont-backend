option_settings:
  # Database (AWS RDS PostgreSQL)
  aws:elasticbeanstalk:application:environment:
    DATABASE_URL: "jdbc:postgresql://neoxus-postgres.cry468eu2zma.eu-north-1.rds.amazonaws.com:5432/nexuscommerce"
    DATABASE_USER: "postgres"
    DATABASE_PASSWORD: "REPLACE_WITH_YOUR_RDS_PASSWORD"

    # Redis (AWS ElastiCache Serverless)
    REDIS_HOST: "neoxus-redis-hn4rka.serverless.eun1.cache.amazonaws.com"
    REDIS_PORT: "6379"

    # Elasticsearch
    ELASTICSEARCH_URL: "https://es.neoxus.co.uk"
    SPRING_ELASTICSEARCH_URIS: "https://es.neoxus.co.uk"
    ELASTICSEARCH_ENABLED: "true"
    SEARCH_REINDEX_ENABLE_SCHEDULING: "true"

    # Kafka/Redpanda - External Redpanda instance
    SPRING_KAFKA_BOOTSTRAP_SERVERS: "kafka.neoxus.co.uk:9092"
    SPRING_KAFKA_CONSUMER_GROUP_ID: "fo-sync"
    SPRING_KAFKA_CONSUMER_AUTO_OFFSET_RESET: "earliest"

    # JWT Secrets
    JWT_SECRET: "REPLACE_WITH_PRODUCTION_JWT_SECRET"
    NEXUS_JWT_SECRET: "REPLACE_WITH_PRODUCTION_JWT_SECRET"

    # Google OAuth
    SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID: "REPLACE_WITH_GOOGLE_CLIENT_ID"
    SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET: "REPLACE_WITH_GOOGLE_CLIENT_SECRET"

    # Auth Cookies (RFC 6265 compliant - no leading dot)
    AUTH_COOKIE_DOMAIN: "neoxus.co.uk"
    AUTH_COOKIE_SECURE: "true"
    AUTH_COOKIE_SAME_SITE: "Lax"

    # CORS
    CORS_ALLOWED_ORIGINS: "https://api.neoxus.co.uk,https://neoxus.co.uk,https://www.neoxus.co.uk,https://admin.neoxus.co.uk"

    # Email (MailerSend)
    NEXUS_MAILERSEND_TOKEN: "REPLACE_WITH_MAILERSEND_TOKEN"
    NEXUS_MAIL_FROM: "info@neoxus.co.uk"
    NEXUS_MAIL_FROM_NAME: "Neoxus"
    NEXUS_ADMIN_URL: "https://admin.neoxus.co.uk"

    # AWS S3 (Use real AWS S3, not MinIO)
    AWS_ACCESS_KEY: "REPLACE_WITH_AWS_S3_ACCESS_KEY"
    AWS_SECRET_KEY: "REPLACE_WITH_AWS_S3_SECRET_KEY"
    AWS_S3_BUCKET: "nexuscommerce-production"
    AWS_REGION: "eu-north-1"
    AWS_S3_ENDPOINT: ""  # Empty to use real AWS S3 (not MinIO)

    # Admin Bootstrap
    ADMIN_EMAIL: "Bukhari.kibuka7@gmail.com"
    ADMIN_PASSWORD: "REPLACE_WITH_SECURE_PASSWORD"
    ADMIN_BOOTSTRAP_ENABLED: "true"
    ADMIN_BOOTSTRAP_EMAIL: "Bukhari.kibuka7@gmail.com"
    ADMIN_BOOTSTRAP_PASSWORD: "REPLACE_WITH_SECURE_PASSWORD"

    # Rakuten Affiliate Network
    RAKUTEN_CLIENT_ID: "REPLACE_WITH_PRODUCTION_RAKUTEN_CLIENT_ID"
    RAKUTEN_CLIENT_SECRET: "REPLACE_WITH_PRODUCTION_RAKUTEN_CLIENT_SECRET"
    RAKUTEN_BASE_URL: "https://api.linksynergy.com"
    RAKUTEN_SSID: "4632666"

    # Ollama (AI/LLM) - Disable if not available in production
    OLLAMA_HOST: "http://localhost:11434"
    OLLAMA_MODEL: "llama3.2:3b"
    OLLAMA_TIMEOUT: "120"
    OLLAMA_ENABLED: "false"

    # Application Settings
    SPRING_PROFILES_ACTIVE: "prod"
    JPA_HIBERNATE_DDL_AUTO: "validate"
    PORT: "8080"

    # FlexOffers
    FLEXOFFERS_API_KEY: "REPLACE_WITH_FLEXOFFERS_API_KEY"
    FLEXOFFERS_BASE_URL: "https://api.flexoffers.com/v3"

    # CJ (Commission Junction)
    CJ_API_KEY: "REPLACE_WITH_CJ_API_KEY"
    CJ_BASE_URL: "https://ads.api.cj.com/query"
    CJ_COMPANY_ID: "REPLACE_IF_NEEDED"
    CJ_PID: "REPLACE_IF_NEEDED"
    CJ_SERVICEABLE_AREA: "GB"
    CJ_CURRENCY: "GBP"
    CJ_SYNC_ENABLED: "true"
    CJ_SYNC_PAGE_SIZE: "100"
    CJ_SYNC_MAX_PAGES: "100"
    CJ_RETRY_MAX_ATTEMPTS: "3"
    CJ_RECONCILE_INTERVAL_MS: "600000"
    CJ_RECONCILE_MAX_AGE_MINUTES: "30"

    # Logging
    LOG_NEXUS_LEVEL: "INFO"

    # JVM Options (Elastic Beanstalk handles memory, but you can customize)
    JAVA_TOOL_OPTIONS: "-Xms1g -Xmx2g -XX:+UseG1GC -XX:MaxGCPauseMillis=200"
